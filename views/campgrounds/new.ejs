<%- include("../partials/header"); %>
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1 style="margin-bottom: 20px;">Add a New Campground</h1>
        </div> 
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Campground Name">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="price" placeholder="Price" min="1.00" step="1.00">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="image" placeholder="Image Url" class="form-control"> 
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="description" placeholder="Description" class="form-control"> 
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
               
               
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
        
    </div>
    


<%- include("../partials/footer"); %>