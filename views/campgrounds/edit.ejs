<%- include("../partials/header"); %>
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Edit <%= campground.name %></h1>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="campground[price]" value="<%= campground.price %>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>" class="form-control"> 
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[description]" value="<%= campground.description %>" class="form-control"> 
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
               
               
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
        
    </div>
    


<%- include("../partials/footer"); %>