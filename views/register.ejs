<%- include("./partials/header"); -%>
<div class="row">
    <div class="col-md-12">
        <form class="form-signin" action="/register" method="POST">
            <h1 class="h3 mb-3 font-weight-normal">Sign Up</h1>
            <label for="inputUsername" class="sr-only">Username</label>
            <input type="text" id="inputUsername" class="form-control" name="username" placeholder="Username" required autofocus>
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" required style="margin-bottom: 0;">
            <label for="inputEmail" class="sr-only">Email</label>
            <input type="email" id="inputEmail" class="form-control" name="email" placeholder="Email" required>
            <label for="inputCode" class="sr-only">AdminCode</label>
            <input type="password" id="adminCode" class="form-control" name="adminCode" placeholder="Admin Code" required>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button>
          </form>
          <div class="form-signin">
              <a href="/campgrounds">Go Back</a>
          </div>
    </div>
</div>
<%- include("./partials/footer"); -%>